<h1>エラー祭り</h1>
<h2>投稿してみよう</h2>
<%= form_for @post do |f| %>


  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :年齢  %>
    <%= f.number_field :age, :size => 10 %>
  </div>

  <div class="field">
    <%= f.label :本文  %>
    <%= f.text_area :body, :size => "30x2" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", posts_path %>